{
    "resource": "/categories",
    "useCases": {
        "insert": "AddCategory",
        "search": "SearchCategory",
        "update": "UpdateCategory",
        "delete": "DeleteCategory"
    },
    "insertFields": [
        {
            "key": "name",
            "label": "$name",
            "rules": "required",
            "cols": {
                "sm": 12
            }
        },
        {
            "key": "parentId",
            "label": "$parent",
            "component": "v-autocomplete",
            "dataSource": {
                "endpoint": "/categories"
            },
            "cols": {
                "sm": 12,
                "lg": 6
            },
            "affects": [
                {
                    "key": "attributeIds",
                    "change": {
                        "type": "dataSource",
                        "api": {
                            "endpoint": "categories/GetCategoryAttributesNotAlreadyPresentInAncestors?id=",
                            "associateValue": true
                        }
                    }
                }
            ]
        },
        {
            "key": "attributeIds",
            "label": "$attributes",
            "component": "VSelectAll",
            "dataSource": {
                "endpoint": "/attributes"
            },
            "props": {
                "multiple": true
            },
            "cols": {
                "sm": 12,
                "lg": 6
            }
        }
    ],
    "processDataOn": "client",
    "headers": [
        {
            "text": "$name",
            "value": "name"
        },
        {
            "text": "$attributes",
            "value": "attributeNames"
        },
        {
            "text": "$ancestorsAttributes",
            "value": "ancestorsAttributeNames"
        },
        {
            "text": "$parent",
            "value": "parentName"
        }
    ]
}